# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# --- Environment ---
ENVIRONMENT=development  # development, staging, production

# --- API Configuration ---
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# --- LLM Provider ---
MODEL_PROVIDER=gemini  # gemini or groq

# --- API Keys (REQUIRED) ---
GOOGLE_API_KEY=your_google_api_key_here
GROQ_API_KEY=your_groq_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# --- LangSmith Tracing (Optional) ---
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=beaver-agent

# --- Model Configuration ---
GEMINI_MODEL=gemini-2.5-flash
GROQ_MODEL=llama-3.3-70b-versatile
MODEL_TEMPERATURE=0.1
MODEL_MAX_RETRIES=2

# --- Agent Configuration ---
MAX_REVISION_COUNT=3
RECURSION_LIMIT=15
SUMMARIZER_THRESHOLD=3000

# --- Security ---
PII_CONFIDENCE_THRESHOLD=0.6
PII_VAULT_TTL=3600
API_KEY_HEADER=X-API-Key
API_KEYS=["your-secret-api-key-1","your-secret-api-key-2"]

# --- Rate Limiting ---
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# --- Database ---
DATABASE_URL=sqlite:///./sales_crm.db
# For PostgreSQL: postgresql://user:password@localhost:5432/beaver_db
DB_POOL_SIZE=5

# --- Redis ---
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# --- Logging ---
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# --- Monitoring ---
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# --- Input Validation ---
MAX_EMAIL_LENGTH=20000

# --- Sender Configuration ---
SENDER_NAME=Your Name
SENDER_TITLE=Your Title
SENDER_COMPANY=Your Company
SENDER_PHONE=+1-234-567-8900
SENDER_EMAIL=your.email@company.com
SENDER_WEBSITE=www.yourcompany.com
